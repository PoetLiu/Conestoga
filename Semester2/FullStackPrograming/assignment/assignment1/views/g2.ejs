<%- include('./partials/header.ejs') -%>

    <body>
        <%- include('./partials/navbar.ejs') -%>
            <h2 class="title">G2 Test</h2>
            <form id="g2-form" class="shadow mb-5 bg-body rounded">
                <h3>Personal Information</h3>
                <div class="mb-3">
                    <label for="firstname" class="form-label">First Name</label>
                    <input type="text" class="form-control" id="firstname" required>
                </div>
                <div class="mb-3">
                    <label for="lastname" class="form-label">Last Name</label>
                    <input type="text" class="form-control" id="lastname" required>
                </div>
                <div class="mb-3">
                    <label for="licenseNumber" class="form-label">License Number</label>
                    <input type="text" class="form-control" id="licenseNumber" aria-describedby="licenseNumberHelp"
                        required>
                    <div id="licenseNumberHelp" class="form-text">Must be 8 characters(alpha numberic).</div>
                </div>

                <div class="row g-3">
                    <div class="col mb-3">
                        <label for="number" class="form-label">Age</label>
                        <input type="text" class="form-control" id="age" required>
                    </div>
                    <div class="col mb-3">
                        <label for="dob" class="form-label">DOB</label>
                        <input type="date" class="form-control" id="dob" required>
                    </div>
                </div>

                <hr class="hr" />
                <h3>Car Information</h3>
                <div class="row g-3">
                    <div class="col mb-3">
                        <label for="make" class="form-label">Make</label>
                        <input type="text" class="form-control" id="make" required>
                    </div>
                    <div class="col mb-3">
                        <label for="model" class="form-label">Model</label>
                        <input type="text" class="form-control" id="model" required>
                    </div>
                    <div class="col mb-3">
                        <label for="year" class="form-label">Year</label>
                        <input type="number" min="1900" max="9999" class="form-control" id="year" required>
                    </div>
                </div>
                <div class="row g-3">
                    <div class="col mb-3">
                        <label for="platNumber" class="form-label">Plat Number</label>
                        <input type="text" class="form-control" id="platNumber" required>
                    </div>
                </div>

                <div class="text-center">
                    <button id="submit" type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
            <%- include('./partials/footer.ejs') -%>
    </body>

    </html>